<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:fillViewport="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".RegisterFragment"
            android:paddingStart="10dp"
            android:paddingEnd="20dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/edit_text_register_driver"
                android:hint="Driver Name"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_register_plugedNumber"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:ems="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="textStart"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/edit_text_register_plugedNumber"
                android:inputType="text"
                android:hint="Pluged Number"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_register_driver"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_register_repeat_plugedNumber"
                android:ems="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="textStart"
                android:maxLength="6"
                android:layout_marginTop="5dp"/>

        <EditText
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_register_repeat_plugedNumber"
                android:inputType="text"
                android:hint="Repeat Pluged Number"
                app:layout_constraintBottom_toTopOf="@+id/spinner_register_type"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_register_plugedNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:ems="10"
                android:textAlignment="textStart"
                android:maxLength="6"
                android:layout_marginTop="5dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/button_register"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_register_prodDate"
                app:layout_constraintBottom_toTopOf="@+id/progressBar_register"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

        <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_register"
                android:paddingTop="10dp"
                android:indeterminate="true"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_register"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Spinner
                android:id="@+id/spinner_register_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_register_repeat_plugedNumber"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_register_prodDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@android:layout/simple_spinner_item"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginTop="5dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/edit_text_register_prodDate"
                android:hint="Production Date"
                app:layout_constraintTop_toBottomOf="@+id/spinner_register_type"
                app:layout_constraintBottom_toTopOf="@+id/button_register"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="textStart"
                android:layout_marginTop="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
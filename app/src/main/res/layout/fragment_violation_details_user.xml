<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="30dp"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="36dp">

        <TextView
                android:text="Pluged Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:textColor="@color/text_dark"
                app:layout_constraintStart_toStartOf="parent"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_user_pluged_number"
                tools:text="the value"
                style="@style/MyLabel"
                android:textColor="@color/text"
                android:freezesText="true"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/textView"
                android:layout_marginStart="50dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="Driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:textColor="@color/text_dark"/>

        <TextView
                android:text="Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:textColor="@color/text_dark"/>

        <TextView
                android:text="Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:textColor="@color/text_dark"/>

        <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:textColor="@color/text_dark"/>

        <TextView
                android:text="Tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                android:textColor="@color/text_dark"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_user_driver"
                tools:text="THE VALUE"
                style="@style/MyLabel"
                android:textColor="@color/text"
                android:freezesText="true"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView_user_pluged_number"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_user_location"
                tools:text="the value"
                style="@style/MyLabel"
                android:textColor="@color/text"
                android:singleLine="false"
                android:nestedScrollingEnabled="true"
                android:ellipsize="end"
                android:freezesText="true"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView_user_driver"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:layout_width="0dp"
                tools:text="the value"
                android:layout_height="wrap_content"
                android:id="@+id/textView_user_type"
                style="@style/MyLabel"
                android:textColor="@color/text"
                android:freezesText="true"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="@+id/textView_user_location"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="the value"
                android:id="@+id/textView_user_date"
                style="@style/MyLabel"
                android:textColor="@color/text"
                android:freezesText="true"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/textView_user_type"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_user_tax"
                tools:text="the value"
                style="@style/MyLabel"
                android:textColor="@color/text"
                android:freezesText="true"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/textView_user_date"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Button
                android:text="Pay for This Violation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_pay"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_user_tax"/>

        <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_pay"
                android:indeterminate="true"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@+id/button_pay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible"
                android:layout_marginTop="10dp"/>

        <FrameLayout
                android:id="@+id/progressBarHolderDetails"
                android:animateLayoutChanges="true"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="gone"
                android:elevation="2dp"
                tools:layout_editor_absoluteY="36dp"
                tools:layout_editor_absoluteX="28dp">

            <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_gravity="center"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:gravity="center"
                                                   android:orientation="vertical"
                                                   android:layout_height="match_parent"
                                                   tools:context=".AdminViolationsFragment"
                                                   android:id="@+id/constraintLayout">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/recycle_view"
            tools:listitem="@layout/violation_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/edit_text_search_date_from"
            android:hint="From Date"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_search_location"
            android:height="1dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/edit_text_search_date_to"
            android:hint="To Date"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_search_date_from"
            android:height="1dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_search_location"
            android:hint="Location"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_search_pluged_number"
            android:height="1dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_search_driver"
            android:hint="Driver"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:height="1dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_search_pluged_number"
            android:hint="Pluged Number"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_search_driver"
            android:height="1dp"/>

    <Button
            android:text="Search"
            android:layout_width="210dp"
            android:layout_height="57dp"
            android:id="@+id/button_search"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_search_date_to"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
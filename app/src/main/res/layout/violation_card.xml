<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:orientation="horizontal"
                                                   app:cardCornerRadius="4dp"
                                                   android:layout_marginBottom="10dp"
                                                   app:strokeWidth="1dp"
                                                   app:strokeColor="@color/black"
                                                   android:background="@color/secondary">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_container"
            android:background="@color/secondary"
            android:padding="10dp">

        <TextView
                android:text="Date"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                />

        <TextView
                android:text="the value"
                android:layout_width="wrap_content"
                android:textColor="@color/text"
                android:layout_height="wrap_content"
                android:id="@+id/textView_driverValue"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                />

        <TextView
                android:text="the value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_locationValue"
                android:textColor="@color/text"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@id/textView_tax"/>

        <TextView
                android:text="@string/tax"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_tax"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                />

        <ImageView
                android:layout_width="67dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_error_svgrepo_com"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
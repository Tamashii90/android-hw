<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:gravity="center"
                                                   android:orientation="vertical"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ViolationDetailsFragment"
        >

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_pluged_number"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp"/>

    <TextView
            android:text="Pluged Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pluged_number"
            app:layout_constraintTop_toBottomOf="@+id/text_driver"
            app:layout_constraintStart_toEndOf="@+id/text_tax"
            app:layout_constraintEnd_toEndOf="@+id/text_tax"/>

    <TextView
            android:text="Tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_paid"
            app:layout_constraintStart_toStartOf="@+id/text_type"
            app:layout_constraintTop_toBottomOf="@+id/text_type"/>

    <TextView
            android:text="Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_location"
            app:layout_constraintStart_toStartOf="@+id/text_tax"
            app:layout_constraintTop_toBottomOf="@+id/text_tax"/>

    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_tax"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_pluged_number"/>

    <TextView
            android:text="Paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_type"
            app:layout_constraintStart_toStartOf="@+id/text_location"
            app:layout_constraintTop_toBottomOf="@+id/text_location"/>

    <TextView
            android:text="Driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_driver"
            app:layout_constraintStart_toStartOf="@+id/text_pluged_number"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/text_date"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_driver"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_pluged_number"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_location"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_date"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_location"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_type"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_date"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_paid"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_paid"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_type"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_tax"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_tax"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_paid"
            app:layout_constraintBottom_toTopOf="@+id/button_update_violation"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_location"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_driver"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_date"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_update_violation"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"
            android:layout_marginEnd="147dp"
            app:layout_constraintEnd_toEndOf="@+id/edit_text_tax"/>

    <FrameLayout
            android:id="@+id/progressBarHolderDetails"
            android:animateLayoutChanges="true"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_gravity="center"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".VehiclesSearchFragment">

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="205dp"
                android:layout_height="44dp"
                android:id="@+id/progessBar_vehicles_search"
                android:visibility="invisible"
                android:elevation="4dp"
                android:background="@color/primary"
                tools:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_vehicles_search"
                android:layout_marginTop="5dp"/>

        <TextView
                android:text="Find Vehicles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/editText_vehicles_pluged_number"
                android:textColor="@color/primary"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="2"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText_vehicles_pluged_number"
                app:layout_constraintBottom_toTopOf="@+id/button_vehicles_search"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Pluged Number"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLength="6"/>

        <Button
                android:text="Search"
                android:layout_width="210dp"
                android:layout_height="57dp"
                android:id="@+id/button_vehicles_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_vehicles_pluged_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>

        <TextView
                android:text="Register a New Vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_register_vehicle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@+id/button_vehicles_search"
                android:textSize="16sp"
                android:textColor="#673AB7"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph_user"
            app:startDestination="@id/userFragment">

    <fragment
            android:id="@+id/userFragment"
            android:name="com.example.wmshw.UserFragment"
            tools:layout="@layout/fragment_user"
            android:label="Dashboard">
        <action
                android:id="@+id/action_userFragment_to_userViolationLogs"
                app:destination="@id/userViolationLogs"
                app:enterAnim="@anim/bottom_to_top"
                app:exitAnim="@anim/top_to_bottom"
                app:popEnterAnim="@anim/bottom_to_top"
                app:popExitAnim="@anim/top_to_bottom"/>
    </fragment>
    <fragment
            android:id="@+id/userViolationLogs"
            android:name="com.example.wmshw.UserViolationsFragment"
            android:label="Violations"
            tools:layout="@layout/fragment_user_violations">
        <argument
                android:name="usersViolationLogs"
                app:argType="string"/>
    </fragment>
</navigation>